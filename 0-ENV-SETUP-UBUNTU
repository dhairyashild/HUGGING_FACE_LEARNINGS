# Create virtual environment
python -m venv langchain-env

# Activate it (choose ONE based on your OS):
source langchain-env/bin/activate    # Mac/Linux
# langchain-env\Scripts\activate      # Windows - activates virtual environment

# Install required packages
pip install langchain langchain-huggingface transformers torch

# Google Colab alternative (use only if in Colab):
# !pip install langchain langchain-huggingface transformers torch
